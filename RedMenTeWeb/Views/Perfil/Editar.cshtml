@model RedMenTeWeb.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Editar Perfil</h2>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.UsuarioID)

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Correo)
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Rol)
            @Html.TextBoxFor(m => m.Rol, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Edad)
            @Html.TextBoxFor(m => m.Edad, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProgramaID)
            @Html.TextBoxFor(m => m.ProgramaID, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success mt-3">Guardar Cambios</button>
    }
</div>
