@model RedMenTeWeb.Models.CursosModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-center">
    <h3 class="text-danger">¿Estás seguro de que deseas eliminar el curso <strong>@Model.Nombre</strong>?</h3>
    <p class="mb-4">Esta acción no se puede deshacer.</p>

    @using (Html.BeginForm("Eliminar", "Curso", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.CursoID)
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index", "Curso")" class="btn btn-secondary ml-2">Cancelar</a>
    }
</div>
