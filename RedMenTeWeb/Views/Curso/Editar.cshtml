@model RedMenTeWeb.Models.CursosModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Editar Curso</h2>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.CursoID)

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion)
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Requisitos)
            @Html.TextBoxFor(m => m.Requisitos, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaInicio)
            @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaFin)
            @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success mt-3">Guardar Cambios</button>
    }
</div>
