@model List<RedMenTeWeb.Models.CursosModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Cursos</h2>
    <a href="@Url.Action("Crear", "Curso")" class="btn btn-success mb-3">Agregar Curso</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Requisitos</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model)
            {
                <tr>
                    <td>@curso.Nombre</td>
                    <td>@curso.Requisitos</td>
                    <td>@curso.FechaInicio.ToShortDateString()</td>
                    <td>@curso.FechaFin.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("Editar", new { id = curso.CursoID })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Eliminar", new { id = curso.CursoID })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
