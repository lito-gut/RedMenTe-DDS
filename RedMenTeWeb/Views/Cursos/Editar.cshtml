@model RedMenTeWeb.Models.Curso

@{
    ViewBag.Title = "Editar Curso";
}

<h2>Editar Curso</h2>

@using (Html.BeginForm("Editar", "Cursos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CursoID)

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Requisitos)
        @Html.TextBoxFor(m => m.Requisitos, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Requisitos, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaInicio)
        @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaFin)
        @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}

