@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mb-4">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #7C3AED;">Total Proyectos Evaluados</h5>
                        <h3 class="font-weight-bold" style="color: #333333;">15</h3>
                    </div>
                </div>
            </div>
            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #10B981;">Retroalimentaciones Registradas</h5>
                        <h3 class="font-weight-bold" style="color: #333333;">45</h3>
                    </div>
                </div>
            </div>
            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #FFA500;">Áreas de Mejora Identificadas</h5>
                        <h3 class="font-weight-bold" style="color: #333333;">10</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Áreas de Mejora Comunes -->
        <div class="card border-0 shadow">
            <div class="card-header text-white" style="background-color: #7C3AED;">
                <h5 class="m-0">Áreas de Mejora Comunes</h5>
            </div>
            <div class="card-body">
                <ul style="color: #333333;">
                    <li><strong style="color: #7C3AED;">Gestión del tiempo:</strong> Mencionado en 60% de los proyectos.</li>
                    <li><strong style="color: #7C3AED;">Comunicación del equipo:</strong> Mencionado en 45% de los proyectos.</li>
                    <li><strong style="color: #7C3AED;">Documentación técnica:</strong> Mencionado en 30% de los proyectos.</li>
                </ul>
                <button class="btn" style="background-color: #7C3AED; color: #FFFFFF;">Descargar Reporte</button>
            </div>
        </div>
    </div>
</div>