@model RedMenTeWeb.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
    <div class="row col-xl-10 col-lg-12">
        <!-- Sección de imagen -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/Templates/img/LogotipoRedMenTe.jpg" alt="Imagen Lateral" style="width: 100%; height: auto; border-radius: 10px;" />
        </div>
        <!-- Sección del formulario -->
        <div class="col-md-6">
            <div class="card o-hidden border-0 shadow-lg" style="background-color: #FFFFFF; color: #333333;">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h1 class="h4" style="color: #3B82F6;">Registrar Cuenta</h1>
                    </div>

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert text-center" style="background-color: #10B981; color: #FFFFFF;">
                            @ViewBag.Mensaje
                        </div>
                    }

                    @using (Html.BeginForm("RegistrarCuenta", "Home"))
                    {
                        <form class="user">
                            <div class="form-group">
                                Identificación
                                @Html.TextBoxFor(x => x.Identificacion, new { @class = "form-control form-control-user", @Required = "true", @onkeyup = "QueryName();" })
                            </div>
                            <div class="form-group">
                                Nombre
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @Required = "true", @ReadOnly = "true" })
                            </div>
                            <div class="form-group">
                                Correo
                                @Html.TextBoxFor(x => x.Correo, new { @class = "form-control form-control-user", @type = "Email", @Required = "true" })
                            </div>
                            <div class="form-group">
                                Contraseña
                                @Html.TextBoxFor(x => x.Contrasenna, new { @class = "form-control form-control-user", @type = "password", @Required = "true" })
                            </div>
                            <input type="submit" class="btn btn-block" value="Registrar Cuenta" style="background-color: #3B82F6; color: #FFFFFF; border: none;"
                                   onmouseover="this.style.backgroundColor='#7C3AED'; this.style.color='#FFFFFF';"
                                   onmouseout="this.style.backgroundColor='#3B82F6'; this.style.color='#FFFFFF';">
                        </form>
                    }
                    <hr>
                    <div class="text-center">
                        <a class="small" href="@Url.Action("RecuperarContrasenna", "Home")" style="color: #7C3AED;">Recuperar Contraseña?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="@Url.Action("IniciarSesion", "Home")" style="color: #7C3AED;">Iniciar Sesión</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="@Url.Action("Index", "Home")" style="color: #7C3AED;">Pantalla Principal!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>