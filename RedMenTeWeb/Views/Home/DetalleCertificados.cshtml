@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-5" style="height: 90vh; max-width: 1200px;">
    <h2 class="font-weight-bold" style="color: #333333;">Detalle del Certificado</h2>
    <p class="font-weight-bold" style="color: #7C3AED;">Consulta la información detallada de tu certificado.</p>
    <div class="card border-0 shadow">
        <div class="card-body">
            <h4 style="color: #7C3AED;">Certificado en Energía Renovable</h4>
            <p class="text-muted">Emitido a: <span style="color: #7C3AED;">María López</span></p>
            <p class="text-muted">Fecha de emisión: <span style="color: #7C3AED;">15 de marzo de 2025</span></p>
            <p class="text-muted">Curso completado: <span style="color: #7C3AED;">Energía Renovable</span></p>
            <div class="d-flex justify-content-between">
                <button class="btn btn-outline-primary btn-sm" style="color: #7C3AED; border-color: #7C3AED;">Descargar PDF</button>
                <button class="btn btn-outline-secondary btn-sm" style="color: #7C3AED; border-color: #7C3AED;">Descargar PNG</button>
                <button class="btn btn-outline-danger btn-sm" style="color: #FF0000; border-color: #FF0000;">Reportar Problema</button>
            </div>
        </div>
    </div>
</div>